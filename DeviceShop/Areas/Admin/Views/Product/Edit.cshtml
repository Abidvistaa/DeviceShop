@using DeviceShop.Models
@model DeviceShop.Models.Product
@{
    ViewData["Title"] = "Edit";
}
<br />
<h2 class="text-info">Edit Product</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" />

        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Color"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductType.ProductsType"></label>
                </div>
                <div class="col-8">
                    <select asp-for="ProductTypeId" asp-items="ViewBag.productTypeId" class="form-control"></select>
                    <span asp-validation-for="ProductType.ProductsType" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SpecialTag.TagName"></label>
                </div>
                <div class="col-8">
                    <select asp-for="SpecialTagId" asp-items="ViewBag.tagId" class="form-control"></select>
                    <span asp-validation-for="SpecialTag.TagName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Image"></label>
                </div>
                <div class="col-8">
                    <input type="file" asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IsAvailable"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="IsAvailable" class="form-control" />
                    <span asp-validation-for="IsAvailable" class="text-danger"></span>
                </div>
            </div>
            <div style="padding-left:397px">
                <input type="submit" value="Update" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Back To List</a>
            </div>
        </div>
        
        <div class="col-2 offset-1 pt-4">
            <img src="~/@Model.Image" width="100%" />
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}