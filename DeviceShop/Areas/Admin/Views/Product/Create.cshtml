@using DeviceShop.Models
@model DeviceShop.Models.Product
@{
    ViewData["Title"] = "Create";
}
<br />
<h2 class="text-info">Create Product</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border" style="width:70%">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Color"></label>
            </div>
            <div class="col-5">
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ProductType.ProductsType"></label>
            </div>
            <div class="col-5">
                <select asp-for="ProductTypeId" asp-items="ViewBag.productTypeId" class="form-control"></select>
                <span asp-validation-for="ProductType.ProductsType" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="SpecialTag.TagName"></label>
            </div>
            <div class="col-5">
                <select asp-for="SpecialTagId" asp-items="ViewBag.tagId" class="form-control"></select>
                <span asp-validation-for="SpecialTag.TagName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Image"></label>
            </div>
            <div class="col-5">
                <input type="file" asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="IsAvailable"></label>
            </div>
            <div class="col-5">
                <input type="checkbox" asp-for="IsAvailable" class="form-control" />
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
        </div>
        <div style="padding-left:260px">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>
    </div>

</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}