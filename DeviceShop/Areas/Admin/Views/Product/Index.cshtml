@using DeviceShop.Models
@model IEnumerable<DeviceShop.Models.Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}
<br />
<div class="row">
    <div class="col-6">
        <h2 class=" text-info">Product List</h2>
    </div>
    <div style="padding-left:410px;">
        <a asp-action="Create" class="btn btn-info"><i><i class="fas fa-plus"></i></i>&nbsp; New Product</a>
    </div>
</div>



<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered">
        <thead style="background-color:darkred">
            <tr class="table-info">
                <th>Name</th>
                <th>Price</th>
                <th>Color</th>
                <th>ProductType</th>
                <th>SpecialTag</th>
                <th></th>

            </tr>
        </thead>
    </table>
</div>

