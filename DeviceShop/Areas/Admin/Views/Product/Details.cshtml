@using DeviceShop.Models
@model DeviceShop.Models.Product
@{
    ViewData["Title"] = "Details";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Details</h2>
    </div>
</div>

<br />

<div class="p-4 rounded border row">
    <div class="col-6">
        <div class="form-group row">
            <div class="col-2">
                <label>Name:</label>
            </div>
            <div class="col-6 offset-1">
                @Html.DisplayFor(x => x.Name)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label>Price:</label>
            </div>
            <div class="col-6 offset-1">
                @Html.DisplayFor(x => x.Price)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label>Color:</label>
            </div>
            <div class="col-6 offset-1">
                @Html.DisplayFor(x => x.Color)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label>Name:</label>
            </div>
            <div class="col-6 offset-1">
                @Html.DisplayFor(x => x.ProductType.ProductsType)
            </div>
        </div>
        <div class="form-group offset-3" style="padding-left:0px;">
            <a asp-action="Edit" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>
        <div class="form-group pt-4">
            <img src="~/@Model.Image" width="100%" />
        </div>
        
    </div>
</div>

