@using DeviceShop.Models
@model DeviceShop.Models.Product
@{
    ViewData["Title"] = "Details";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Details</h2>
    </div>
</div>

<br />

<div class="p-4 rounded border" style="width:70%; ">
    <div class="form-group row">
        <div class="col-2">
            <label>Name:</label>
        </div>
        <div class="col-5">
            @Html.DisplayFor(x => x.Name)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label>Price:</label>
        </div>
        <div class="col-5">
            @Html.DisplayFor(x => x.Price)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label>Color:</label>
        </div>
        <div class="col-5">
            @Html.DisplayFor(x => x.Color)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label>Name:</label>
        </div>
        <div class="col-5">
            @Html.DisplayFor(x => x.ProductType.ProductsType)
        </div>
    </div>
    <div class="form-group" style="padding-left:130px;">
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>
</div>

