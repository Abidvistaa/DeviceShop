@using DeviceShop.Models
@model List<Order>
@{
    ViewData["Title"] = "Cart";
}
<h1>Recieved Orders</h1>
<br />

<div class="row">
    <table class="table table-bordered ">
        <thead style="color:mediumvioletred; background-color:aliceblue">
            <tr>
                <th>Order No</th>
                <th>Customer Name</th>
                <th>Phone No</th>
                <th>Email</th>
                <th>Address</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody style="background-color:darkgrey;color:darkslateblue">
            @foreach (var order in Model)
            {
            <tr>
                <td>@order.OrderNo</td>
                <td>@order.Name</td>
                <td>@order.PhoneNo</td>
                <td>@order.Email</td>
                <td>@order.Address</td>
                <td>@order.OrderDate</td>

              
            </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-4">
        <a asp-action="Index" asp-controller="Home" asp-area="Admin" class="btn btn-secondary">Back To Home</a>
    </div>
</div>
