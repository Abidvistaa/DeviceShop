@model DeviceShop.Models.ProductType
@{
    ViewData["Title"] = "Create";
}
<br />
<h2 class="text-info">Create ProductType</h2>
<form asp-action="Create" method="post">
    <div class="p-4 rounded border" style="width:70%">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductsType"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductsType" class="form-control" />
                <span asp-validation-for="ProductsType" class="text-danger"></span>
            </div>
            
        </div>
        <div class="form-group" style="padding-left:130px;"> 
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-primary">Back To List</a>
        </div>
    </div>
    
</form>

@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
}