@model DeviceShop.Models.ProductType
@{
    ViewData["Title"] = "Edit";
}
<br />
<h2 class="text-info">Edit ProductType</h2>
<form asp-action="Edit" method="post">
    <div class="p-4 rounded border" style="width:70%">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <input type="hidden" asp-for="Id"/>
            <div class="col-2">
                <label asp-for="ProductsType"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductsType" class="form-control" />
                <span asp-validation-for="ProductsType" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group" style="padding-left:130px;">
            <input type="submit" value="Update" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>
    </div>

</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}