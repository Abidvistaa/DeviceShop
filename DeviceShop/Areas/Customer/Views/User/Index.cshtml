@model DeviceShop.Models.ApplicationUser
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<br />
<div style="padding-left:100px; width:80%">
    <div class="row">
        <div class="col-6">
            <h2 class=" text-info">User List</h2>
        </div>
        <div style="padding-left:220px;">
            <a asp-action="Create" class="btn btn-info"><i><i class="fas fa-plus"></i></i>&nbsp; New User</a>
        </div>
    </div>

    <br />
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered">
            <thead style="background-color:darkred">
                <tr class="table-info">
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>User Name</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>



@section Scripts{

    <script src="~/js/user.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {

        var save = '@TempData["save"]'
        if (save != '') {
            alertify.success(save);
            }

        var edit = '@TempData["edit"]'
        if (edit != '') {
            alertify.success(edit);
            }

    })

    </script>
}
