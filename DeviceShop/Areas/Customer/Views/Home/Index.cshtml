@using DeviceShop.Models
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}
<br />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-3">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:18px;color:darkmagenta">@product.Name</label>
                    </h4>
                </div>
                <img src="~/@product.Image" class="" style="height:250px;" />
                <div class="card-header">
                    <div class="d-flex justify-content-between ">
                        <div class="btn-group">
                            <label style="color:tomato;font-size:14px"><b>Price : @product.Price</b></label>
                        </div>
                        <div>
                            <a class="btn btn-outline-primary pull-right btn-outline-info" asp-action="Details" asp-controller="Home" asp-route-id="@product.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>  
    }
</div>

