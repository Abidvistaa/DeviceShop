@using DeviceShop.Models
@model DeviceShop.Models.Product
@{
    ViewData["Title"] = "Details";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Details</h2>
    </div>
</div>

<br />

<form asp-action="Details" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="p-4 rounded row">
        <div class="col-6">
            <div class="form-group row">
                <div class="col-2">
                    <label>Name:</label>
                </div>
                <div class="col-6 offset-1">
                    @Html.DisplayFor(x => x.Name)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label>Price:</label>
                </div>
                <div class="col-6 offset-1">
                    @Html.DisplayFor(x => x.Price)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label>Color:</label>
                </div>
                <div class="col-6 offset-1">
                    @Html.DisplayFor(x => x.Color)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label>Name:</label>
                </div>
                <div class="col-6 offset-1">
                    @Html.DisplayFor(x => x.ProductType.ProductsType)
                </div>
            </div>
            <br />
            <div class="form-group" style="padding-left:0px;">
                <a asp-action="Index" class="btn btn-secondary">Back To List</a>&nbsp;
                @if (Model.IsAvailable == true)
                {
                <i class="fas fa-cart-plus"></i><input type="submit" value="Order" class="btn btn-outline-success "/>
                }
            </div>
            <div class="form-group pt-4">
                <img src="~/@Model.Image" width="100%" height="100%" />
            </div>
            @if (Model.IsAvailable == false)
            {
                <div class="form-group pt-4">
                    <img src="~/images/noavailable.jpg" width="50%" height="100px" />
                </div>
            }
        </div>
    </div>


</form>
